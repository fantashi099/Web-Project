        <!-- <a href="/rooms">CHỌN PHÒNG</a>     -->
        <!-- <a id="nav-services" class="nav-item nav-link" href="/services">THÔNG TIN KHÁCH HÀNG</a>
                <a id="nav-contact" class="nav-item nav-link" href="/contact">THANH TOÁN</a> -->
      </div>
    </div>
