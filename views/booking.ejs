    <script type="text/javascript">

      // Booking Price
      let totalPrice = document.getElementById('price-book');
      let price_input = document.getElementById('price-input');
      let pricePres = 0, priceExc = 0, priceDelu = 0;

      function Delu(){
        let selectBox = document.getElementById('Deluxe-room');
        var value = selectBox.options[selectBox.selectedIndex].value;
        if (value === '0') {
          priceDelu = 0;
        } else if (value === '1') {
          priceDelu = 2800000;
        } else if (value === '2') {
          priceDelu = 3200000;
        }
      }

      function Exc(){
        let selectBox = document.getElementById('Excutive-room');
        var value = selectBox.options[selectBox.selectedIndex].value;
        if (value === '0') {
          priceExc = 0;
        } else if (value === '1') {
          priceExc = 5000000;
        } else if (value === '2') {
          priceExc = 10000000;
        }
      }

      function Pres(){
        let selectBox = document.getElementById('Presidential-room');
        var value = selectBox.options[selectBox.selectedIndex].value;
        if (value === '0') {
          pricePres = 0;
        } else if (value === '1') {
          pricePres = 20000000;
        } else if (value === '2') {
          pricePres = 30000000;
        }
      }

      function setPrice(obj){
        var totalNight = Number(document.getElementById('stay-night').innerHTML);
        var total = (priceDelu + priceExc + pricePres) * totalNight;

        totalPrice.setAttribute('value',total);
        totalPrice.innerHTML = formatMoney(total);
        price_input.setAttribute('value',total);

      }

      function formatMoney(amount, decimalCount = 0, decimal = ".", thousands = ",") {
        try {
          decimalCount = Math.abs(decimalCount);
          decimalCount = isNaN(decimalCount) ? 2 : decimalCount;

          const negativeSign = amount < 0 ? "-" : "";

          let i = parseInt(amount = Math.abs(Number(amount) || 0).toFixed(decimalCount)).toString();
          let j = (i.length > 3) ? i.length % 3 : 0;

          return negativeSign + (j ? i.substr(0, j) + thousands : '') + i.substr(j).replace(/(\d{3})(?=\d)/g, "$1" + thousands) + (decimalCount ? decimal + Math.abs(amount - i).toFixed(decimalCount).slice(2) : "");
        } catch (e) {
          console.log(e)
        }
      };

    </script>

