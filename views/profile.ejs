<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <!-- <%# CSS Style Sheet %> -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="css/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@200;300&display=swap" rel="stylesheet">
   <!-- favicon -->
  <link rel="icon" type="image/png" href="images/favicon.png">

  <!-- <%# Font awesome free 5.15.1 %> -->
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <title> ROYAL HOTEL </title>
</head>

<body>
    <div class="bg-secondary text-light py-3 navbar-expand-md">
        <div class="row"    >
            <div class="col-md-2">
                <div class="icons d-flex justify-content-between collapse navbar-collapse">
                    <a href="http://www.instagram.com"><i class="fas fa-phone fa-10s" style="color:white;" ></i></a>
                    <a class="text-light"> 19001500</a>&nbsp;
                    <a href="http://www.instagram.com"><i class="fab fa-instagram fa-10s" ></i></a>
                    <a href="http://www.facebook.com"><i class="fab fa-facebook-square fa-xs"></i></a>
                    <a href="http://www.twitter.com"><i class="fab fa-twitter-square fa-xs"></i></a>
                    <a href="http://www.youtube.com"><i class="fab fa-youtube-square fa-xs"></i></a>
                </div>
            </div> <!-- col-md-4 mx-auto -->
        </div>
     </div>
     <a href="/"><img id="hotel-logo1" src="images/RoyalHotel1.png" alt="hotel" style="margin-left: 55rem;margin-top: -3.8rem;"></a>
    <div class="row" style="margin-top:5rem;">

        <div class="col-6" style=" padding-top: 2rem; margin-left:40rem;">
            <p style="font-size: 40px; font-weight: bolder;">THÔNG TIN CÁ NHÂN </p>
            <div style="border-bottom: 5px double black; margin-top: 3rem; width: 40rem;">
                <b style="font-size: 0.8rem;">Name</b>
                <p style="margin-bottom: 0.2rem;"><%= name %></p>
            </div> <!-- form-group -->

            <div style="border-bottom: 5px double black; margin-top: 3rem;width: 40rem;">
                <b style="font-size: 0.8rem;">Email Address</b>
                <p style="margin-bottom: 0.2rem;"><%= email %></p>
            </div> <!-- form-group -->

            <div style="border-bottom: 5px double black; margin-top: 3rem;width: 40rem;">
                <b style="font-size: 0.8rem;">Phone Number</b>
                <p style="margin-bottom: 0.2rem;"><%= phone %></p>
            </div> <!-- form-group -->
            <br>
            <% if(info) { %>

              <p style="font-size: 30px; font-weight: bolder; ">CHI TIẾT ĐẶT PHÒNG CỦA BẠN</p>
              <div style="border-style: solid; width: 30rem;">
                  <div class="container">
                      <div class="row" style="margin-left:0.05rem">
                        <div class="col-6" style="padding-left:0px">
                          <b>Nhận phòng</b> <br>
                          Ngày <%= String(info.checkIn.getDate()) +'/'+ String(info.checkIn.getMonth() + 1) + '/' + String(info.checkIn.getFullYear()) %> <br>
                          Từ 15:00 PM
                        </div>
                        <div class="col-6" style="padding-left:0px">
                          <b>Trả phòng</b> <br>
                           Ngày <%= String(info.checkOut.getDate()) +'/'+ String(info.checkOut.getMonth() + 1) + '/' + String(info.checkOut.getFullYear()) %> <br>
                          Cho đến 12:00 AM
                        </div>
                        <div class="col-6" style="padding-left:0px"> <b>Tổng thời gian lưu trú: </b> <br />
                          <span style="padding-top: 1rem;"> <%= info.totalNight %></span>
                        </div>
                        <div class="col-60" style="padding-left:0px">
                          <b>Người lớn:</b> <%= info.totalPerson[0].adults %>   <br>
                          <b>Trẻ em:</b> <%= info.totalPerson[0].childrens %>
                        </div>
                      </div>
                  </div>

                  <div class="container" style="border-top:5px ridge">
                    <div class="row" style="margin-left:0.05rem">
                      <div class="col-6" style="padding-left:0px">
                        <b>Trạng thái:</b>
                      </div>
                      <div class="col-6" style="padding-left:0px">
                        <% if(info.status === 'onPay') { %>
                          <span style="font-weight: bolder">Chưa thanh toán</span>
                        <% } else { %>
                          <span style="font-weight: bolder;">Đã thanh toán</span>
                        <% } %>
                      </div>
                      <div class="col-6" style="padding-left:0px">
                        <b>Phòng bạn đã đặt:</b>
                      </div>
                      <div class="col-6" style="padding-left:0px">
                        <% if (info.room[0].Presidential !== 0) { %>
                          Phòng Presidential: <%= info.room[0].Presidential %> giường <br>
                        <% } %>

                        <% if (info.room[0].Excutive !== 0) { %>
                          Phòng Excutive: <%= info.room[0].Excutive %> giường <br>
                        <% } %>

                        <% if (info.room[0].Deluxe !== 0) { %>
                          Phòng Deluxe: <%= info.room[0].Deluxe %> giường <br>
                        <% } %>
                      </div>
                      <div class="col-6" style="padding-left:0px">
                        <b>Tổng cộng:</b>
                      </div>
                      <div class="col-6" style="padding-left:0px">
                        <span class="money"><%= info.room[0].price %></span> VNĐ
                      </div>
                    </div>
                  </div>
              </div>

            <% } %>

        </div>
    </div>

<script type="text/javascript">
function formatMoney(amount, decimalCount = 0, decimal = ".", thousands = ",") {
  try {
    decimalCount = Math.abs(decimalCount);
    decimalCount = isNaN(decimalCount) ? 2 : decimalCount;

    const negativeSign = amount < 0 ? "-" : "";

    let i = parseInt(amount = Math.abs(Number(amount) || 0).toFixed(decimalCount)).toString();
    let j = (i.length > 3) ? i.length % 3 : 0;

    return negativeSign + (j ? i.substr(0, j) + thousands : '') + i.substr(j).replace(/(\d{3})(?=\d)/g, "$1" + thousands) + (decimalCount ? decimal + Math.abs(amount - i).toFixed(decimalCount).slice(2) : "");
  } catch (e) {
    console.log(e)
  }
};

var money = document.getElementsByClassName('money');
for (let i =0; i< money.length; i++) {
  money[i].innerHTML = formatMoney(money[i].innerHTML);
}
</script>
</body>
</html>
